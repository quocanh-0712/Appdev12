@model WebApplication11.ViewModels.TraineeCourseViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Assign Trainee to Course</h2>

@using (Html.BeginForm("Create", "TraineeCourses", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.TraineeCourse.TraineeId)
        @Html.DropDownListFor(m => m.TraineeCourse.TraineeId, new SelectList(Model.Trainees, "Id", "UserName"), "Select Trainee", new { @class = "form-control" }
        )
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TraineeCourse.Course.Name)
        @Html.DropDownListFor(m => m.TraineeCourse.CourseId
          , new SelectList(Model.Courses, "Id", "Name"),
          "Select Course",
          new { @class = "form-control" }
        )
    </div>


    <button type="submit" class="btn btn-primary">Assign</button>
}
