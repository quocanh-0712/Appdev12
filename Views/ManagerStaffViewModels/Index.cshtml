@model IEnumerable<WebApplication11.ViewModels.Users_In_Role>
@{
    ViewBag.Title = "Index";
}
@if (Request.IsAuthenticated && User.IsInRole("TrainingStaff"))
{
    <p>
        <a onclick="window.location='@Url.Action("Register", "Account")'" type="button" class="btn btn-default">Create  </a>
    </p>}
<h2>Index</h2>

<table class="table table-hover">
    <tr>
        <th>UserName</th>
        <th>Email</th>
        <th>Role</th>
        <th>Delete</th>
        <th>Edit</th>

    </tr>
    @foreach (var users in Model)
    {
        <tr>
            @if ((users.Role.Contains("Admin") || users.Role.Contains("TrainingStaff")) == false)
            {
                <td>@users.Username</td>
                <td>@users.Email</td>
                <td>@users.Role</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = users.UserId })</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = users.UserId })</td>

            }
        </tr>
    }
</table>