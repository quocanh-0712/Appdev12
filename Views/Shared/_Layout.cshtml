<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title FPT Application </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image: url(Image/pinksky.jpg);
    background-repeat: no-repeat;
    background-size: 100%;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Request.IsAuthenticated && User.IsInRole("Trainee"))
                {
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    <p><a onclick="window.location='@Url.Action("Index", "TraineeCourses")'" class="btn btn-default ">Assigned Courses </a></p>
                                </th>

                            </tr>
                        </thead>

                    </table>
                }
                @if (Request.IsAuthenticated && User.IsInRole("Trainer"))
                {
                    <table>
                        <thead>
                            <tr>

                                <th>

                                    <p><a onclick="window.location='@Url.Action("Index", "TrainerTopics")'" class=" btn btn-default ">Assigned Topics </a></p>
                                </th>

                            </tr>
                        </thead>

                    </table>
                }
                @if (Request.IsAuthenticated && User.IsInRole("TrainingStaff"))
                {
                    <table>
                        <thead>

                        <th>
                            <p><a onclick="window.location='@Url.Action("Index", "Categories")'" class="btn btn-default">Manage Category </a></p>
                        </th>
                        <th>
                            <p><a onclick="window.location='@Url.Action("Index", "Courses")'" class="btn btn-default">Manage Courses </a></p>
                        </th>
                        <th>
                            <p><a onclick="window.location='@Url.Action("Index", "Topics")'" class="btn btn-default">Manage Topics </a></p>
                        </th>
                        <th>
                            <p><a onclick="window.location='@Url.Action("Index", "ManagerStaffViewModels")'" class="btn btn-default">Manage Account </a></p>
                        </th>
                        <th>
                            <p><a onclick="window.location='@Url.Action("Index", "TrainerTopics")'" class="btn btn-default">Assign Trainers To Topics </a></p>
                        </th>
                        <th>
                            <p><a onclick="window.location='@Url.Action("Index", "TraineeCourses")'" class="btn btn-default">Assign Trainee To Courses </a></p>
                        </th>

                        </thead>

                    </table>
                }
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Roles", "UsersWithRoles", "ManageUsers")</li>

                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TuyenMinhApp </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>